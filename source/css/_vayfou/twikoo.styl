// 输入框等调整
.OwO .OwO-body {
  min-width: 31.25rem;
  color: var(--text);
}

.twikoo svg {
  color: var(--text-p1);
}

.tk-expand {
  width: 100%;
  cursor: pointer;
  padding: 0.75em;
  text-align: center;
  transition: background;
  border-radius: $border-card;
  letter-spacing: 5px;
  background: var(--block);
}

.twikoo .tk-comments > .tk-submit {
  overflow: visible !important;
}

.twikoo .tk-comments .OwO .OwO-body {
  border-color: var(--block-border) !important;
  border-radius: $border-card !important;
  overflow: hidden;
  background-color: var(--block) !important;
  cursor: auto;
  transform: translateZ(0);
  animation: .3s ease .1s 1 normal both running donate_effcet;
}

/* Add the new link style here */
.twikoo .tk-content span a:not([data-fancybox="gallery"]),
.twikoo .tk-main .tk-content span > a {
  color: var(--text-p1);
  padding: 0 0.2em;
  text-decoration: none;
  position: relative;
  border-radius: 0;
  transition: all .2s ease-out;
  background: linear-gradient(0deg, rgba(32,148,243,0.2), rgba(32,148,243,0.2)) no-repeat left 100% / 100% 0;

  &:hover {
    text-decoration: none;
    border-radius: 4px;
    background: linear-gradient(0deg, rgba(32,148,243,0.2), rgba(32,148,243,0.2)) no-repeat left 100% / 100% 100%;
  }
}

/* Rest of your original styles */
.twikoo .tk-comments button.el-button.tk-cancel.el-button--default.el-button--small {
  background: var(--block);
  border-radius: $border-card;
  color: var(--text-p1);

  &:hover {
    background: var(--card);
    color: var(--text-p2);
  }
}

/* Add the rest of your original styles here */

/* Media queries */
@media screen and (max-width: 768px) {
  .OwO .OwO-body {
    min-width: 260px;
  }

  /* Add additional media query styles here */
}


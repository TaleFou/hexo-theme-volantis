//===========================
// 图片加载失败的样式
//===========================
img.error
  opacity: unset !important
  filter: unset !important
  min-height: 150px
  min-width: 150px
  display: inline-block
  transform: scale(1)
  content: ''
  color: transparent
  &.avatar
    display: none !important
  &:before
    content: ''
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    background: #f5f5f5 url("https://static.vayfou.cn/img/imgerror.svg") no-repeat center / 80% 80%
    background-color: var(--color-img-error)
  &[alt='']:after
    content: "图片加载失败"
  &:after
    @media screen and (max-width: 300px)
      display: none
    content: attr(alt)
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    line-height: 2
    background-color: rgba(0,0,0,.5)
    color: white
    font-size: 0.6rem
    text-align: center
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    text-indent: initial;




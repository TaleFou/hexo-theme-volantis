// 封面页加载失败样式调整
.headimg-div img.error
  display: inline-block !important
  &:before
    background-color: var(--color-card) !important

// Tag link 标签的图标加载失败
.tag.link img.error
  min-height: 100%

// 文章页作者头像
img[alt="Author"].error
  display none !important

// 隐藏文章页面 Fancybox 描述文本
.hideFancybox
  margin: 0 auto
  span
    display: none !important
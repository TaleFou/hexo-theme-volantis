// 评论隐私
.comment-policy
  background-color: #ebeef2;
  position: relative;
  margin-bottom: 18px;
  background-position: right 20px top 20px;
  border: none;
  border-radius: 4px;
  .content
    padding: 15px;
    .comment-policy-title
      font-size: 15px;
      font-weight: 600;
      line-height: 1.45em !important;
    .comment-policy-link
      font-size: 14px;


